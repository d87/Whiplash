{
  "parserOptions": {
    "ecmaVersion": 2018,
    "sourceType": "module"
  },

  "env": {
    "browser": true,
    "node": true,
    "es6": true
  },

  "globals": {
  },

  "settings": {
    "react": {
      "version": "16.0"
    }
  },

  "extends": [
    "eslint:recommended",
    "plugin:react/recommended"
  ],

  "rules": {
    "react/jsx-no-bind": ["error", {
      "allowArrowFunctions": true,
      "allowBind": false,
      "ignoreRefs": true
    }],
    "react/no-did-update-set-state": "error",
    "react/no-unknown-property": "error",
    "react/no-unused-prop-types": "error",
    "react/prop-types": "off",
    "react/react-in-jsx-scope": "error",
    "no-console": "off",
    "semi": "off",
    "no-unused-vars": "off",
    "no-empty": "warn",
    "no-trailing-spaces": "off",
    "no-undef": "off",
    "indent": "off"
  }
}
